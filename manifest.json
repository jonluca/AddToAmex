{
  "manifest_version": 2,

  "name": "AddToAmex",
  "description": "Add all offers to all your Amex cards quickly!",
  "version": "1.1",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },
  "homepage_url": "https://jonluca.me"
}